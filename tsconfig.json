{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es5",
    "types": ["@pyoner/svelte-types", "jest"]
  },
  "files": ["node_modules/@upswyng/upswyng-core/index.ts"],
  "include": [
    "**/rollup*config.js",
    "packages/*/src/**/*",
    "packages/upswyng-*/index.ts",
    "packages/upswyng-*/src/jest.config.js",
    "packages/upswyng-native/config.example.ts",
    "packages/upswyng-native/config.ts"
  ],
  "exclude": ["node_modules"]
}
